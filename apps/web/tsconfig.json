{
  "extends": "@v1/typescript/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@v1/supabase": ["../../packages/supabase/src"],
      "@v1/ui": ["../../packages/ui/src"],
      "@v1/trpc": ["../../packages/trpc/src"],
      "@v1/utils": ["../../packages/utils/src"],
      "@v1/property-data": ["../../packages/property-data/src"],
      "@v1/jobs": ["../../packages/jobs/src"],
      "@v1/stripe": ["../../packages/stripe/src"],
      "@v1/logger": ["../../packages/logger/src"]
    },
    "strict": true
  },
  "include": [
    "next-env.d.ts",
    "next.config.js",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "tailwind.config.ts"
  ],
  "exclude": ["node_modules"]
}
