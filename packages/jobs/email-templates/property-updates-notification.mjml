<mjml>
  <mj-head>
    <mj-title>Property Updates - CRE Finder AI</mj-title>
    <mj-preview>{DATA_VARIABLE:changesCount} property updates in {DATA_VARIABLE:locationName}</mj-preview>
    <mj-attributes>
      <mj-all font-family="'Helvetica Neue', Helvetica, Arial, sans-serif"></mj-all>
      <mj-text font-weight="400" font-size="16px" color="#000000" line-height="24px" font-family="'Helvetica Neue', Helvetica, Arial, sans-serif"></mj-text>
    </mj-attributes>
    <mj-style inline="inline">
      .blue-links a {
        color: #2563eb !important;
      }
      .update-item {
        background-color: #f8fafc;
        border-left: 4px solid #2563eb;
        padding: 12px 16px;
        margin: 8px 0;
        border-radius: 0 4px 4px 0;
      }
    </mj-style>
  </mj-head>
  <mj-body background-color="#f6f9fc">
    <mj-section background-color="#ffffff" padding-bottom="0px" padding-top="0">
      <mj-column>
        <mj-image width="200px" src="https://via.placeholder.com/200x60/2563eb/ffffff?text=CRE+Finder+AI" alt="CRE Finder AI"></mj-image>
      </mj-column>
    </mj-section>
    
    <mj-section background-color="#ffffff" padding-bottom="20px" padding-top="20px">
      <mj-column>
        <mj-text align="center" color="#1f2937" font-size="28px" font-weight="bold" line-height="36px">
